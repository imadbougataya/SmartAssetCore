    <!--
        Added the constraints for entity Asset.
    -->
    <changeSet id="20251217002703-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="production_line_id"
                                 baseTableName="asset"
                                 constraintName="fk_asset__production_line_id"
                                 referencedColumnNames="id"
                                 referencedTableName="production_line"
                                 />

        <addForeignKeyConstraint baseColumnNames="allowed_site_id"
                                 baseTableName="asset"
                                 constraintName="fk_asset__allowed_site_id"
                                 referencedColumnNames="id"
                                 referencedTableName="site"
                                 />

        <addForeignKeyConstraint baseColumnNames="allowed_zone_id"
                                 baseTableName="asset"
                                 constraintName="fk_asset__allowed_zone_id"
                                 referencedColumnNames="id"
                                 referencedTableName="zone"
                                 />
    </changeSet>
</databaseChangeLog>
